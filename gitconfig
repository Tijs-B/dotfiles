[alias]
    st = status -sb
    br = branch -vv
    aa = add --all :/
    ci = commit -v
    ca = commit --amend -v
    co = checkout
    dh = diff HEAD~
    ff = merge --ff-only
    fa = fetch --all
    pullrb = pull --rebase
    dft = difftool
    dlog = "!f() { GIT_EXTERNAL_DIFF=difft git log -p --ext-diff $@; }; f"

[color]
    ui = auto

[core]
    excludesFile = ~/.gitignore_global

[include]
    path = ~/.gitconfig_local

[diff]
    tool = difftastic

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[pager]
    difftool = true

[push]
    autoSetupRemote = true

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
