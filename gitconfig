# vi: ft=gitconfig

[absorb]
  maxStack = 50

[alias]
  # difftastic aliases
  dft = difftool
  dfts = difftool --staged
  dlog = -c diff.external=difft log --ext-diff
  dshow = -c diff.external=difft show --ext-diff
  ddiff = -c diff.external=difft diff
  dl = -c diff.external=difft log -p --ext-diff
  ds = -c diff.external=difft show --ext-diff

  # better log
  lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

  # from https://softwaredoug.com/blog/2022/11/09/idiot-proof-git-aliases.html
  hub = "!f() { \
       open \"$(git ls-remote --get-url \
       | sed 's|git@github.com:\\(.*\\)$|https://github.com/\\1|' \
       | sed 's|\\.git$||'; \
       )\"; \
  }; f"

  # from https://news.ycombinator.com/item?id=39357918
  # fuzzy add
  fza = "!git ls-files -m -o --exclude-standard | fzf -m --print0 | xargs -0 git add"
  # fuzzy add patch
  fzap = "!git ls-files -m -o --exclude-standard | fzf -m --print0 | xargs -0 git add -p"
  # gone: remove branches that are gone on the remote
  gone = "!f() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; f"
  # poco: solve poetry.lock merge conflicts
  poco = "!git restore --staged --worktree poetry.lock && poetry lock --no-update && git add poetry.lock"
  # head: show current head commit
  head = "rev-parse HEAD"

[branch]
  sort = -committerdate

[color]
  ui = auto

[column]
  ui = auto

[commit]
  verbose = true

[core]
  excludesFile = ~/.gitignore_global
  fsmonitor = true
  untrackedCache = true

[diff]
  algorithm = histogram
  colorMoved = plain
  renames = true
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[fetch]
  all = true
  prune = true
  pruneTags = true

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[help]
  autocorrect = prompt

[include]
  path = ~/.gitconfig_local

[init]
  defaultBranch = main

[merge]
  conflictstyle = zdiff3

[pager]
  difftool = true

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  followTags = true

[rebase]
  autosquash = true
  autostash = true
  updateRefs = true

[rerere]
  enabled = true
  autoupdate = true

[tag]
  sort = version:refname

